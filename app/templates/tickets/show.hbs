<p class="pull-right">{{#linkTo tickets.edit content classNames="btn"}}Edit Ticket{{/linkTo}}</p>

<!-- Turn this into a custom handlebars helper -->
<dl class="dl-horizontal">
  <dt>ID:</dt>
  <dd>{{id}}</dd>
</dl>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd>{{title}}</dd>
</dl>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd>{{description}}</dd>
</dl>

<dl class="dl-horizontal">
  <dt>Status:</dt>
  <dd>{{status}}</dd>
</dl>

<dl class="dl-horizontal">
  <dt>Reported By:</dt>
  <dd>
    {{#linkTo "users.show" reportedBy}}
      <img {{bindAttr src="reportedBy.gravatarURL"}} width="20"/>
      {{reportedBy.displayName}}
    {{/linkTo}}
  </dd>
</dl>

<dl class="dl-horizontal">
  <dt>Assigned To:</dt>
  <dd>
    {{#linkTo "users.show" assignedTo}}
      <img {{bindAttr src="assignedTo.gravatarURL"}} width="20"/>
      {{assignedTo.displayName}}
    {{/linkTo}}
  </dd>
</dl>

<h5>Comments</h5>
<ul class="unstyled">
  {{#each comments}}
    <li>
      <small>{{formattedDate created}}</small>
      {{#linkTo "users.show" user}}
        <img {{bindAttr src="user.gravatarURL"}} width="20"/>
        {{user.displayName}}
      {{/linkTo}}
      {{body}}
    </li>
  {{/each}}
</ul>
{{#view App.CommentField}}
  {{view Ember.TextField valueBinding="view.body"}}
  {{view App.UserSelect selectionBinding="view.user" contentBinding="controllers.users" prompt="Who are you?" classNames="input-medium"}}
  <button class="btn btn-small">Save</button>
{{/view}}